@model CHAT.ViewModels.ChaterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="~/Content/slyles.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Pictures/convert.png" type="image/x-icon">
    <title>Регистрация</title>

</head>
<body>
    <h1 class="success">Для входа в чат, пожалуйста, зарегестрируйтесь</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="reg">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <span>@Html.LabelFor(model => model.ChaterkName, htmlAttributes: new { @class = "control-label col-md-2" })<span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ChaterkName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ChaterkName, "", new { @class = "text-danger" })
                    <p class="name-alert">@ViewBag.NameAlert</p>
                </div>
            </div>

            <div class="form-group">
                <span>@Html.LabelFor(model => model.Pass, htmlAttributes: new { @class = "control-label col-md-2" })</span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <span>@Html.LabelFor(model => model.ConfirmPass, htmlAttributes: new { @class = "control-label col-md-2" })</span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ConfirmPass, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPass, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <span>@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })</span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    <p class="mail-danger">@ViewBag.MailAlert</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Зарегестрироваться" class="upd" />
                </div>
            </div>
        </div>
    }


</body>
</html>

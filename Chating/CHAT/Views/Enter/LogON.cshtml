@model CHAT.ViewModels.LogONViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="~/Content/slyles.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Pictures/convert.png" type="image/x-icon">
    <title>Войти</title>
</head>
<body>
    <header>
        <h1>Введите имя и пароль</h1>
        <p>* При необходимости зарегестрируйтесь</p>
        <div id="data-chater">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">



                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <span>@Html.LabelFor(model => model.ChaterkName, htmlAttributes: new { @class = "control-label col-md-2" })</span>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ChaterkName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ChaterkName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span>@Html.LabelFor(model => model.Pass, htmlAttributes: new { @class = "control-label col-md-2" })</span>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
                    </div>
                </div>
                <h4 class="text-alert">@ViewBag.Message</h4>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Войти" class="btn-success" />
                    </div>
                </div>
                @*<span>@Html.ActionLink("Регистрация", "RegistChater", "Enter")</span>*@
                <span><a href="/Enter/RegistChater">Регистрация</a></span>
            </div>
            }
        </div>
        <div id="animation">
            <img id="first" src="~/Pictures/messendjer.jpeg" />
            <img id="second" src="~/Pictures/messendjer.jpeg" />
            <img id="third" src="~/Pictures/messendjer.jpeg" />
            <img id="fourth" src="~/Pictures/messendjer.jpeg" />
            <img id="fifth" src="~/Pictures/messendjer.jpeg" />
            <img id="sixth" src="~/Pictures/messendjer.jpeg" />



        </div>

    </header>
   
  
</body>
</html>
